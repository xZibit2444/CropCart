# Backend configuration for CropCart GH
# Copy to .env and edit values for local/dev

# Server
PORT=3001
CORS_ORIGINS=http://localhost:4173

# Notifications
NOTIFY_EMAIL=info@cropcartgh.local

# SMTP (optional for email notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-username
SMTP_PASS=your-password
SMTP_SECURE=false

# From address (optional; defaults to SMTP_USER or no-reply)
FROM_EMAIL=no-reply@cropcartgh.local
